{
  "name": "covenantrix-desktop",
  "version": "1.0.11",
  "description": "Covenantrix - AI-Powered Legal Document Analysis Desktop Application",
  "main": "electron-app/src/main.js",
  "author": "Covenantrix Team",
  "license": "MIT",
  "private": true,
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "electron-dev-win": "set ELECTRON_IS_DEV=true && electron .",
    "start": "npm run electron-dev-win",
    "dev": "npm run electron-dev-win",
    "setup-dev": "node -e \"require('child_process').exec(process.platform === 'win32' ? 'setup-dev.bat' : 'bash setup-dev.sh', (err, stdout, stderr) => { console.log(stdout); if (stderr) console.error(stderr); })\"",
    "test-startup": "node test-startup.js",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "cd electron-app && npm run build",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac", 
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-updater": "^6.1.4",
    "form-data": "^4.0.0"
  },
  "build": {
    "appId": "com.covenantrix.desktop",
    "productName": "Covenantrix",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-app/build/**/*",
      "electron-app/src/main.js",
      "electron-app/src/preload.js",
      "node_modules/**/*",
      "!node_modules/.cache/**/*"
    ],
    "extraResources": [
      {
        "from": "python-dist/",
        "to": "python-service/",
        "filter": ["**/*"]
      },
      {
        "from": "core-rag-service/config.yaml",
        "to": "python-service/config.yaml"
      },
      {
        "from": "service_main.py",
        "to": "python-service/service_main.py"
      },
      {
        "from": "requirements.txt",
        "to": "python-service/requirements.txt"
      }
    ],
    "asarUnpack": [
      "**/python-service/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron-app/assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "electron-app/assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "electron-app/assets/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "electron-app/assets/icon.ico",
      "uninstallerIcon": "electron-app/assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Covenantrix",
      "include": "build/installer.nsh"
    },
    "dmg": {
      "title": "Covenantrix ${version}",
      "icon": "electron-app/assets/icon.icns",
      "background": "electron-app/assets/dmg-background.png",
      "window": {
        "width": 600,
        "height": 400
      },
      "contents": [
        {
          "x": 150,
          "y": 200,
          "type": "file"
        },
        {
          "x": 450,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "covenantrix-desktop"
    }
  }
}